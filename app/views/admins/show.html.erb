<% provide(:title, @admin.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @admin %>
        <%= @admin.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @admin.events.any? %>
      <h3>events (<%= @admin.events.count %>)</h3>
      <ol class="events">
        <%= render @events %>
      </ol>
      <%= will_paginate @events %>
    <% end %>
  </div>
</div>
