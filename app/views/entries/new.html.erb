<% provide(:title, "イベント予約") %>
<h1>イベント予約</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @event do |f| %>

      <%= f.label :title, "イベント名" %>
      <%= f.text_field :title, :readonly => true, class: 'form-control' %>

      <%= f.label :introduction, "イベント概要" %>
      <%= f.text_area :introduction, :readonly => true, class: 'form-control' %>

      <%= f.label :address, "開催場所" %>
      <%= f.text_field :address, :readonly => true, class: 'form-control' %>

      <%= f.label :start_date, "開始日" %>
      <%= f.date_field :start_date, :readonly => true, class: 'form-control' %>

      <%= f.label :end_date, "終了日" %>
      <%= f.date_field :end_date, :readonly => true, class: 'form-control' %>

      <%= f.label :entry_count, "参加者数の上限（人）" %>
      <%= f.number_field :entry_count, :readonly => true, class: 'form-control' %>

      <%= f.label :event_price, "1人あたりの料金（円）" %>
      <%= f.number_field :event_price, :readonly => true, class: 'form-control', id: "event_price" %>

    <% end %>
    <div>
      <h2>参加する方の「お名前」と「人数」を入力いただき、予約ボタンを押してください</h2>
    </div>
    <%= form_for(@entry, url: "/events/#{@event.id}/entries/") do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :entry_name, "お名前" %>
      <%= f.text_field :entry_name, class: 'form-control'%>

      <%= f.label :entry_count, "参加者数（人）" %>
      <%= f.number_field :entry_count, class: 'form-control', id: "entry_count" %>

      <%= f.label :entry_price, "料金（円）" %>
      <%= f.number_field :entry_price, class: 'form-control', id: "entry_price" %>

      <%= f.submit "イベントを予約する", class: "btn btn-primary", data: { confirm: "このイベントを予約します。よろしいですか?"} %>

    <% end %>
  </div>
</div>
