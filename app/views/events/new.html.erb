<% provide(:title, "イベント登録") %>
<h1>イベント登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@event) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title, "イベント名" %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :introduction, "イベント概要" %>
      <%= f.text_area :introduction, class: 'form-control' %>

      <%= f.label :start_date, "開始日" %>
      <%= f.date_field :start_date, class: 'form-control' %>

      <%= f.label :end_date, "終了日" %>
      <%= f.date_field :end_date, class: 'form-control' %>
      
      <%= f.label :entry_count, "参加者の人数（上限値）" %>
      <%= f.number_field :entry_count, class: 'form-control' %>

      <%= f.label :event_price, "料金" %>
      <%= f.number_field :event_price, class: 'form-control' %>
      
      <%= f.label :address, "開催場所" %>
      <%= f.text_field :address, class: 'form-control' %>
      
      <%= f.label :event_icon, "イベントアイコン" %>
      <%= f.file_field :event_icon, class: 'form-control' %>
      
      <%= f.submit "イベントを登録する", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
