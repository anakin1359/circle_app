<% provide(:title, "登録済みイベント一覧") %>
<h1>登録済みイベント一覧</h1>

<table>
  <thead>
    <tr>
      <th>イベント名</th>
      <th>イベント概要</th>
      <th>料金</th>
      <th>日時</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |f| %>
      <tr>
        <td><%= f.title %></td>
        <td><%= f.introduction %></td>
        <td><%= f.event_price %> 円</td>
        <td><%= f.start_date.to_s(:datetime_jp) %> ~ <%= f.end_date.to_s(:datetime_jp) %></td>
        <td><%= link_to "詳細", user_event_path(current_user.id, f.id) %></td>
        <td><%= link_to "編集", edit_event_path(f.id) %></td>
        <td><%= link_to "削除", f, method: :delete, data: { confirm: "イベントを削除します。よろしいですか?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
