<% provide(:title, "イベント詳細") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="event-section">
      <h2>イベント詳細</h2>
      <div class="event-image">
        <%= image_tag("#{@event.event_icon}") %>
      </div>
      <table class="event-more">
        <thead>
          <tr>
            <th>イベントタイトル</th>
            <td><%= @event.title %></td>
          </tr>
          <tr>
            <th>イベント概要</th>
            <td><%= @event.introduction %></td>
          </tr>
          <tr>
            <th>参加者の上限数</th>
            <td><%= @event.entry_count %> 人</td>
          </tr>
          <tr>
            <th>参加料金</th>
            <td><%= @event.event_price %> 円</td>
          </tr>
          <tr>
            <th>開始日時</th>
            <td><%= @event.start_date %></td>
          </tr>
          <tr>
            <th>終了日時</th>
            <td><%= @event.end_date %></td>
          </tr>
          <tr>
            <th>開催場所</th>
            <td><%= @event.address %></td>
          </tr>
        </thead>
      </table>
      <div class="actions">
        <%= link_to "このイベントに参加する", new_event_entry_path(@event.id), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

