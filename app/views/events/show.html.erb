<% provide(:title, "イベント詳細") %>
<h1>イベント詳細</h1>

<table>
  <thead>
    <tr>
      <th>項目</th>
      <td>予約内容</td>
    </tr>
    <tr>
      <th>イベントタイトル</th>
      <td><%= @event.title %></td>
    </tr>
    <tr>
      <th>イベント概要</th>
      <td><%= @event.introduction %></td>
    </tr>
    <tr>
      <th>参加者の上限数</th>
      <td><%= @event.entry_count %> 人</td>
    </tr>
    <tr>
      <th>参加料金</th>
      <td><%= @event.event_price %> 円</td>
    </tr>
    <tr>
      <th>開始日時</th>
      <td><%= @event.start_date %></td>
    </tr>
    <tr>
      <th>終了日時</th>
      <td><%= @event.end_date %></td>
    </tr>
    <tr>
      <th>開催場所</th>
      <td><%= @event.address %></td>
    </tr>
  </thead>
</table>
<div>
  <%= link_to "このイベントに参加する", new_event_entry_path(@event.id) %>
</div>
