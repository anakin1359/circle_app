<% provide(:title, @user.name) %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="mypage-form">
      <h2><%= image_tag("#{@user.user_icon}") %><%= @user.name %> さん</h2>
      <section>
      <div class="section-title">
        <span>一般ユーザの操作</span>
        <div class="user-sections">
          <li><%= link_to "イベントに参加する", events_path %></li>
          <li><%= link_to "予約履歴を確認する", user_entries_path(current_user.id) %></li>
          <li><%= link_to "登録情報を変更する", edit_user_registration_path %></li>
        </div>
      </div>
      <div class="section-title">
        <span>管理者ユーザの操作</span>
        <div class="admin-sections">
          <li><%= link_to "イベントを登録する", new_event_path %></li>
          <li><%= link_to "ユーザ一覧を参照する", users_path %></li>
        </div>
      </div>
      </section>
    </div>
  </div>
</div>
