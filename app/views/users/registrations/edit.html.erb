<% provide(:title, "ユーザー編集") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="sign-form">
      <h2>登録内容の変更 : <%= current_user.name %> さん</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= image_tag("#{@user.user_icon}", class: "user-icon") %>
        </div>

        <div class="field">
          <%= f.label :email, class: "label-item"  %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :current_password, class: "label-item"  %><br />
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "label-item" %>
          <% if @minimum_password_length %>
            <em>（<%= @minimum_password_length %> 文字以上の入力が必要です）</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "label-item"  %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :user_icon, "ユーザアイコン（任意）", class: "label-item"  %><br />
          <%= f.file_field :user_icon, class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit "Update", class: "btn btn-primary" %>
        </div>
      <% end %>
      <%= link_to "Back", :back %>
    </div>
  </div>
</div>
