<% provide(:title, "新規登録") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="sign-form">
      <h2>Signup</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name, class: "label-item" %><br />
          <%= f.text_field :name, autofocus: true, placeholder: "user name" %>
        </div>

        <div class="field">
          <%= f.label :email, class: "label-item" %><br />
          <%= f.email_field :email, autofocus: true, placeholder: "e-mail" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "label-item" %>
          <% if @minimum_password_length %>
          <em>（<%= @minimum_password_length %> 文字以上の入力が必要です）</em>
          <% end %><br />
          <%= f.password_field :password, placeholder: "password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "label-item" %><br />
          <%= f.password_field :password_confirmation, placeholder: "password_confirmation" %>
        </div>

        <div class="field">
          <%= f.label :user_icon, "ユーザアイコン（任意）", class: "label-item" %><br />
          <%= f.file_field :user_icon, class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit "sign up", class: "btn btn-primary" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
